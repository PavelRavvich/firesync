#!/usr/bin/env python3
"""FireSync CLI wrapper for development."""

import sys
from pathlib import Path

# Get absolute path to project root (where this script is located)
project_root = Path(__file__).parent.resolve()

# Add our src directory first to sys.path to avoid conflicts with other projects
# This ensures our modules are imported, not ones from other projects
sys.path.insert(0, str(project_root / 'src'))

# Now we can safely import and run
if __name__ == '__main__':
    # Fix sys.argv[0] to be 'firesync' for proper argparse behavior
    sys.argv[0] = 'firesync'

    # Import firesync package's __main__ module
    from firesync.__main__ import main
    main()
